<html lang='en'>
    <%- include('../partials/header.ejs') %>
    <script>

    </script>
    <body>
       <%- include('../partials/nav.ejs') %>
       <h2 class="title"><%= title %></h2>
       <div class="book_list">
           <% if (books.length>0) {%>
            <% books.map((book,idx)=>{ %>
                
                <div class='book_card'>
                        <img class="book_image" alt="book_image" src=<%= process.env.LOCALHOST %>/<%= book.image %> />
                        <h3 class="book_name"><%= book.name %></h3>
                        <p class="book_author"><%= book.author %></p>
                        <a class="single" href="/books/book/<%= book._id %>">
                        <button class="book_rent_btn" data-doc='<%= book._id %>'>Rent</button>
                    </a>
                    <a class="single" href="/books/update-book/<%= book._id %>">
                        <button class="book_update_btn" data-doc='<%= book._id %>'>Edit</button>

                    </a>
                </div>
            <% }) %>
            <% } else {%>
                <h3 class="title">No books to display</h3>
            <% } %>
        </div>
       </div>
       <%- include('../partials/footer.ejs') %>
    </body>
</html>